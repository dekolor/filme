generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Cinema {
    id                    Int       @id
    groupId               String
    displayName           String
    link                  String
    imageUrl              String
    address               String
    bookingUrl            String?
    blockOnlineSales      Boolean   @default(false)
    blockOnlineSalesUntil DateTime?
    latitude              Float
    longitude             Float

    events MovieEvent[]
}

model Movie {
    id             String   @id
    name           String
    length         Int
    posterLink     String
    videoLink      String?
    link           String
    weight         Int
    releaseYear    String?
    releaseDate    String
    attributeIds   String[]
    imdbId         String?
    description    String?
    tmdbPopularity Float?

    events MovieEvent[]

    @@index([tmdbPopularity])
    @@index([releaseDate])
}

model MovieEvent {
    id                   String   @id
    filmId               String
    cinemaId             Int
    businessDay          String
    eventDateTime        String
    attributes           String[]
    bookingLink          String
    secondaryBookingLink String?
    presentationCode     String
    soldOut              Boolean  @default(false)
    auditorium           String
    auditoriumTinyName   String
    Cinema               Cinema   @relation(fields: [cinemaId], references: [id])
    Movie                Movie    @relation(fields: [filmId], references: [id])

    @@index([cinemaId])
    @@index([filmId])
    @@index([businessDay])
}
